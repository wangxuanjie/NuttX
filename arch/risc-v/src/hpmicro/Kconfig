#####################################################################
#  CAN0 Configuration
#####################################################################

config HPM_CAN0
	bool "CAN0"
	select HPM_CAN_DRV
	default n
	
	menu "CAN0 device driver options"
		depends on HPM_CAN0

	comment "CAN MODE:0 means can_mode_normal"
	comment "CAN MODE:1 means can_mode_loopback_internal"
	comment "CAN MODE:2 means can_mode_loopback_external"
	comment "CAN MODE:3 means can_mode_listen_only"
	config HPM_CAN0_MODE
		int "CAN0_MODE"
		range 0 3
		default 0
		---help---
			0 means can_mode_normal
			1 means can_mode_loopback_internal
			2 means can_mode_loopback_external
			3 means can_mode_listen_only

	config HPM_CAN0_FD_ISO_MODE
		bool "CAN0_FD_ISO_MODE"
		default y

	config HPM_CAN0_USER_SET_TINING
		bool "CAN0_USER_SET_TINING"
		default n
	
	config HPM_CAN0_NUM_SEG1
		depends on HPM_CAN0_USER_SET_TINING
		int "CAN0_NUM_SEG1"
		default 60

	config CONFIG_HPM_CAN0_NUM_SEG2
		depends on HPM_CAN0_USER_SET_TINING
		int "CAN0_NUM_SEG2"
		default 20

	config HPM_CAN0_NUM_SJW
		depends on HPM_CAN0_USER_SET_TINING
		int "CAN0_NUM_SJW"
		default 16

	config CONFIG_HPM_CAN0_PRESCALER
		depends on HPM_CAN0_USER_SET_TINING
		int "CAN0_PRESCALER"
		default 2

	config HPM_CAN0_FD_NUM_SEG1
		depends on (HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_NUM_SEG1"
		default 12

	config HPM_CAN0_FD_NUM_SEG2
		depends on (HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_NUM_SEG2"
		default 4

	config HPM_CAN0_FD_NUM_SJW
		depends on (HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_NUM_SJW"
		default 4

	config CONFIG_HPM_CAN0_FD_PRESCALER
		depends on (HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_PRESCALER"
		default 1

	config HPM_CAN0_BAUDRATE
		depends on !HPM_CAN0_USER_SET_TINING
		int "CAN0_BAUDRATE"
		default 500000
		range 0 1000000

	config HPM_CAN0_MIN_SAMPLEPOINT
		depends on !HPM_CAN0_USER_SET_TINING
		int "CAN0_MIN_SAMPLEPOINT"
		default 750
		range 0 65535

	config HPM_CAN0_MAX_SAMPLEPOINT
		depends on !HPM_CAN0_USER_SET_TINING
		int "CAN0_MAX_SAMPLEPOINT"
		default 875
		range 0 65535

	config HPM_CAN0_FD_BAUDRATE
		depends on (!HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_BAUDRATE"
		default 5000000
		range 0 8000000

	config HPM_CAN0_FD_MIN_SAMPLEPOINT
		depends on (!HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_MIN_SAMPLEPOINT"
		default 750
		range 0 65535

	config HPM_CAN0_FD_MAX_SAMPLEPOINT
		depends on (!HPM_CAN0_USER_SET_TINING) && (CAN_FD || NET_CAN_HAVE_CANFD)
		int "CAN0_FD_MAX_SAMPLEPOINT"
		default 875
		range 0 65535

	endmenu # CAN0 device driver options

