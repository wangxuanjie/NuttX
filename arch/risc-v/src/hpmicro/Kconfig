menu "HPMICRO Peripheral Selection"

#####################################################################
#  Uart0 Configuration
#####################################################################

config HPM_UART0
	bool "UART0"
	select ARCH_HAVE_UART0
	select UART0_SERIALDRIVER
	select ARCH_HAVE_SERIAL_TERMIOS
	default y

#####################################################################
#  I2C master config
#####################################################################

config HPM_I2C_MASTER
	bool
	default n

#####################################################################
#  I2C0 Configuration
#####################################################################

config HPM_I2C0
	bool "I2C0"
	select HPM_I2C_DRV
	select I2C
	default n

choice
	depends on HPM_I2C0
	prompt "I2C0 driver"
	default HPM_I2C0_MASTER

comment "******I2C Mode*********"
comment "0 means i2c_mode_normal"
comment "1 means i2c_mode_fast"
comment "2 means i2c_mode_fast_plus"
comment "***********************"

config HPM_I2C0_MASTER
	bool "I2C0_MASTER"
	select I2C_DRIVER
	select HPM_I2C_MASTER

config HPM_I2C0_SLAVE
	bool "I2C0_SLAVE"
	select I2C_DRIVER
	select I2C_SLAVE

endchoice # I2C0 driver

config HPM_I2C0_MASTER_MODE
	depends on HPM_I2C0_MASTER
	int "I2C0_MASTER_MODE"
	range 0 2
	default 0

config HPM_I2C0_MASTER_10BIT_ADDR
	depends on HPM_I2C0_MASTER
	int "I2C0_MASTER_10BIT_ADDRESS"
	range 0 1
	default 0

config HPM_I2C0_SLAVE_MODE
	depends on HPM_I2C0_SLAVE
	int "I2C0_MASTER_MODE"
	range 0 2
	default 0

config HPM_I2C0_SLAVE_10BIT_ADDR
	depends on HPM_I2C0_SLAVE
	int "I2C0_SLAVE_10BIT_ADDRESS"
	range 0 1
	default 0

config HPM_I2C0_SLAVE_ADDR
	depends on HPM_I2C0_SLAVE
	int "I2C0_SLAVE_ADDRESS"
	range 1 1023
	default 16

