#####################################################################
#  DMA Configuration
#####################################################################

config HPM_DMA
	bool "DMA"
	select ARCH_DMA
	select HPM_DMA_DRV if ARCH_CHIP_HPM6750_SDK || ARCH_CHIP_HPM6360_SDK || ARCH_CHIP_HPM6280_SDK
	select HPM_DMAV2_DRV if ARCH_CHIP_HPM5361_SDK
	select HPM_COMPONENTS_DMA_MANAGER
	default n

config HPM_SPI_DMA
	bool
	default n

#####################################################################
#  SPI0 Configuration
#####################################################################

config HPM_SPI0
	bool "SPI0"
	default n
	select HPM_SPI_DRV

config HPM_SPI0_DMA
	bool "SPI0_DMA"
	default n
	select HPM_DMA
	select HPM_COMPONENTS_SPI
	select HPM_SPI_DMA

