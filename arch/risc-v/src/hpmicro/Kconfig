#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

#####################################################################
#  HPMicro SOC Selection 
#####################################################################

comment "HPMicro Configuration Options"

choice
	prompt "HPMicro Chip Selection"
	default ARCH_CHIP_HPM6750_SDK

config ARCH_CHIP_HPM6750_SDK
	bool "HPM6750"
	select HPM_PLLCTLV_DRV

config ARCH_CHIP_HPM6360_SDK
	bool "HPM6360"
	select HPM_PLLCTLV2_DRV

config ARCH_CHIP_HPM6280_SDK
	bool "HPM6280"
	select HPM_PLLCTLV2_DRV

config ARCH_CHIP_HPM5361_SDK
	bool "HPM5361"
	select HPM_PLLCTLV2_DRV

endchoice # HPMicro Chip Selection

config HPM_ENABLE_FPU
	bool "HPMICRO FPU Support"
	default n
	select ARCH_HAVE_FPU
	---help---
		Enable the RISC-V Floating Point Unit (FPU).

if HPM_ENABLE_FPU
config HPM_ENABLE_DPFPU
	bool "HPMICRO DP-FPU Support"
	default n
	select ARCH_HAVE_DPFPU
	---help---
		Enable the RISC-V Double Precision Floating Point Unit (DP-FPU).
endif

#####################################################################
#  HPM_SDK Linker File Selection
#####################################################################

choice
	prompt "HPMicro Linker File Selection"
	default HPM_BUILD_TYPE_FLASH_XIP

config HPM_BUILD_TYPE_DEBUG
	bool "ram.ld"

config HPM_BUILD_TYPE_FLASH_XIP
	bool "flash_xip.ld"
	select INCLUDE_BOOTHEADER

if ARCH_CHIP_HPM6750_SDK || ARCH_CHIP_HPM6360_SDK
config HPM_BUILD_TYPE_FLASH_SDRAM_XIP
	bool "flash_sdram_xip.ld"
	select INCLUDE_BOOTHEADER
endif

endchoice # HPMicro Linker File Selection

